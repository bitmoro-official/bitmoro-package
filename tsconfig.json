{
  "compilerOptions": {
    "outDir": "./build",         
    "module": "CommonJS",       
    "target": "ES6",            
    "declaration": true,         
    "declarationDir": "./build",  
    "sourceMap": true,            
    "strict": true,               
    "noImplicitAny": true,
    "downlevelIteration": true,
    "esModuleInterop": true,      
    "skipLibCheck": true          
  },
  "include": ["src/**/*.ts"],     
  "exclude": ["node_modules"],
  "baseUrl": "."    
}